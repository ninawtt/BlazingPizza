<div class="cart-item">
    <a @onclick="OnRemoved" class="delete-item"><i class="fa fa-trash" aria-hidden="true"></i></a>
    <a @onclick="OnEdit" class="edit-item"><i class="fa fa-pencil" aria-hidden="true"></i></a>
    <div class="title">@(Pizza.Size)" @Pizza.Special.Name</div>
    <ul>
        @foreach (var topping in Pizza.Toppings)
        {
            <li>+ @topping.Topping.Name</li>
        }
    </ul>
    <div class="item-price">
        @Pizza.GetFormattedTotalPrice()
    </div>
</div>

@code {
    [Parameter]
    public Pizza Pizza { get; set; }

    [Parameter]
    public EventCallback OnRemoved { get; set; }

    [Parameter]
    public EventCallback OnEdit { get; set; }
}
